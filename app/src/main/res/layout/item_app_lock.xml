<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_app_lockIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/app"/>

    <TextView
        android:id="@+id/tv_app_lockName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_lock_status"
        android:layout_toRightOf="@+id/iv_app_lockIcon"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="应用名称"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_lock_status"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/list_button_lock_pressed"/>
</RelativeLayout>